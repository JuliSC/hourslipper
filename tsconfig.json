{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "vue-shim.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./*'"]
    },
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "preserveValueImports": false,
    "importsNotUsedAsValues": "preserve"
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
